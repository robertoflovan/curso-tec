ul
	padding 0
	text-align center
	li
		margin-bottom .5em
		i
			margin-right 1em
		a
			display block
			padding 0.5em 0


.Perfil
	display flex 
	flex-direction column
	justify-content space-between
	background #E8892D
	width 15.5em
	flex-shrink 0
	color white 


	&-header-figure
		text-align center
		img
			width 8em
			height 8em
		&-figcaptions
			figcaption
				padding .5em
				border-radius 5px
				margin-top 1em
				&:first-child 
					background #4DAB15
				&:last-child
					background #EA1D0D
	&-contacto
		&-tel
			background #1D441E
			&:hover
				background black
		&-email
			background #2533BA
			&:hover
				background black
		&-contratar
			background #7F911C
			&:hover
				background black
	&-redesSociales
		&-twt
			background blue
			&:hover
				background black
		&-fb
			background blue
			&:hover
				background black
		&-git
			color black
			background gray
			&:hover
				background white
	&-mapa
		background red
		width 100%
		height 8em

@media(max-width:800px)
	.Perfil
		width 100%
		flex-direction row
		&-header-figure
			display flex
			position relative
			&-figcaptions 
				position absolute
				left 0
				top 0
				bottom 0
				display flex
				flex-direction column
				justify-content space-between
				width 8em
				figcaption
					margin-top 0
					background transparent !important
			img
				margin-right 1em
		&-redesSociales
			position fixed
			bottom 0
			top 0
			left 0
			ul
				height 100%
				display flex
				flex-direction column
				justify-content center
				li
					width 4em
					a
						display flex
						align-items center
						padding .5em
					i
						margin 1em
					span
						display none
					&:hover
						width 10em
						a
							span
								display inherit
		&-contacto
			width 100%
			margin-right 2em
			
@media(max-width:455px)
	.Perfil
		&-contacto
			li
				i
					margin 0
				span
					display none
